<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_space_bg"
    android:orientation="vertical">

    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/app_theme"
        app:titleBarLeftImage="@drawable/im_close"
        app:titleBarShowLine="true"
        app:titleBarTitle="借款成功"
       >

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>


    <com.wallet.bo.wallets.ui.weiget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dip"
                android:padding="15dip"
                android:background="@drawable/im_wallet_headbg">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款成功"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:layout_toRightOf="@id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(元)"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_below="@id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000.00"
                    android:layout_marginTop="10dip"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

            </RelativeLayout>
            
            
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="15dip"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="0dip"
                   android:layout_weight="1"
                   android:text="借款期限"
                   android:layout_gravity="center_vertical"
                   android:textSize="16dp"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/tv_deadline"
                   android:layout_width="0dip"
                   android:layout_weight="2"
                   android:layout_gravity="center_vertical"
                   android:text="一周(2017-7-31至2017-8-7)"
                   android:textSize="14dp"
                   android:layout_height="wrap_content" />

           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="收款银行卡"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:text="建设银行(6625****2215)"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="借款单号"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="6265243256"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="借款日期"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="2017-7-31"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="联系方式"
                    android:textSize="16dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="135****7665"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <Button
                android:id="@+id/bt_goto"
                android:layout_width="match_parent"
                android:layout_height="46dip"
                android:layout_marginLeft="24dip"
                android:layout_marginRight="24dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/titlebg_selector"
                android:text="完成"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </com.wallet.bo.wallets.ui.weiget.BounceScrollView>


</LinearLayout>