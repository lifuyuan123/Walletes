<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="选择支付方式"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_pay_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/activity_bg" />




    <!--微信支付-->
    <LinearLayout
        android:id="@+id/ll_pay_weixin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_weixin"
            android:layout_marginLeft="15dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐安装微信5.0及以上的用户使用"
                android:textSize="12dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/iv_pay__weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_check_no"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/activity_bg"
        />

    <!--支付宝支付-->
    <LinearLayout
        android:id="@+id/ll_pay_alipay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_alipay" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:id="@+id/iv_pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_check_no"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/activity_bg" />

    <!--连连支付-->
    <LinearLayout
        android:id="@+id/ll_bankPay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_bank"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡支付"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_chooice_desc"
            android:text="请添加"
            android:textColor="@color/text_gray"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/activity_bg" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_pay_bank"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_lianlian"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="60dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_acount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡支付"
                    android:textSize="14dp"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                >
                <ImageView
                    android:id="@+id/iv_pay_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_addBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="15dip"
            android:paddingLeft="30dip"
            android:paddingRight="15dip"
            android:paddingTop="15dip"
            android:text="+添加银行卡"
            android:textColor="@color/text_gray"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/activity_bg" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_pay_dialog"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:layout_marginBottom="26dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/titlebg_selector"
        android:text="立即支付"
        android:textColor="@android:color/white"
        android:textSize="16dp" />


    </LinearLayout>