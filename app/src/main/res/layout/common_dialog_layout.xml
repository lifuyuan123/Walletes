<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0032">
    <LinearLayout
             android:background="@drawable/dialog_back"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="标题"
                 android:textColor="#000000"
                 android:layout_gravity="center"
                 android:textSize="18dp"
                 android:layout_marginTop="20dp"
                 android:id="@+id/MyDialog_Title"
                 />
             <TextView
                 android:id="@+id/MyDialog_Body"
                 android:layout_marginLeft="15dp"
                 android:layout_marginRight="15dp"
                 android:layout_marginTop="20dp"
                 android:layout_marginBottom="20dp"
                 android:gravity="center"
                 android:textSize="16dp"
                 android:textColor="#717070"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="内容"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#EEEEEE"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <Button
                     android:id="@+id/btn_cancell"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="45dp"
                     android:text="取消"
                     android:textSize="16dp"
                     android:textColor="@drawable/dialog_button_textcolor"
                     android:background="#0032"
                     />
                <LinearLayout
                    android:id="@+id/comment_dialog_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#EEEEEE"/>
                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                       android:text="确认"
                        android:textSize="16dp"
                        android:textColor="@drawable/dialog_button_textcolor"
                        android:background="#0032"
                        />
                </LinearLayout>
             </LinearLayout>
         </LinearLayout>




    </LinearLayout>