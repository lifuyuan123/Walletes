<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#00000000" />

    <padding android:left="8dip"/>
    <padding android:bottom="8dip"/>
    <padding android:top="8dip"/>
    <padding android:right="8dip"/>

    <!-- 边缘线的宽度和颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/gray" />

    <corners
        android:bottomLeftRadius="3dip"
        android:bottomRightRadius="3dip"
        android:topLeftRadius="3dip"
        android:topRightRadius="3dip" />

</shape>