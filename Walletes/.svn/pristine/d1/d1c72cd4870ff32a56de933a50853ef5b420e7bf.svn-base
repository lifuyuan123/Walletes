<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_space_bg"
    android:orientation="vertical">

    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/white"
        app:titleBarShowLine="true"
        app:titleBarLeftImage="@drawable/im_back_black"
        app:titleBarTitle="修改手机号"
        app:titleBarTitleColor="@color/text_gray">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:text="请输入手机号并验证"
                android:textColor="@color/app_gray"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="+86"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="18sp" />

                <View

                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@id/tv_86"
                    android:background="@color/app_gray" />


                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:lines="1"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@id/tv_86"
                    android:background="@null" />


                <TextView
                    android:id="@+id/bt_cp"
                    android:layout_width="wrap_content"
                    android:minWidth="72dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="17dip"
                    android:background="@drawable/bg_ckred_loan"
                    android:gravity="center"
                    android:text="点击获取"
                    android:textColor="@color/app_theme"
                    android:textSize="14sp" />

            </RelativeLayout>

            <include layout="@layout/item_horizontal_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="验证码"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_cp"
                    android:lines="1"
                    android:layout_marginLeft="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/radio"
        android:paddingLeft="25dip"
        android:drawablePadding="10dip"
        android:paddingTop="15dip"
        android:text="系统将为你重新核对信息"
        android:textColor="@color/app_gray"
        android:textSize="16sp" />


    <Button
        android:id="@+id/bt_play"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/titlebg_selector"
        android:text="验证"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>