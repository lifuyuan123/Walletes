<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_space_bg"
    android:orientation="vertical">


    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/white"
        app:titleBarLeftImage="@drawable/im_close"
        app:titleBarTitleColor="@color/text_gray"
        app:titleBarShowLine="true"
        app:titleBarTitle="个人设置">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>

    <com.wallet.bo.wallets.ui.weiget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dip"
        android:padding="15dip"
        android:background="@color/white"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_zl"
                android:layout_width="match_parent"
                android:layout_height="64dip"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/im_spinner_right"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />


            <TextView
                android:id="@+id/tv_aq"
                android:layout_width="match_parent"
                android:layout_height="64dip"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/im_spinner_right"
                android:gravity="center_vertical"
                android:text="账户安全"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />


            <!--<CheckBox-->
            <!--android:button="@null"-->
            <!--android:text="消息推送"-->
            <!--android:id="@+id/cb_mes"-->
            <!--android:layout_height="64dip"-->
            <!--android:drawablePadding="10dip"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/text_gray"-->
            <!--android:drawableRight="@drawable/radio_message_selector"-->
            <!--android:layout_width="match_parent" />-->

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_pushEnable"
                android:layout_width="match_parent"
                android:layout_height="64dip"
                android:text="消息推送"
                android:theme="@style/SwitchCompat"
                android:textSize="16sp"
                android:textColor="@color/text_gray" />


            <include layout="@layout/item_horizontal_gray" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="64dip"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="退出"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />

        </LinearLayout>


    </com.wallet.bo.wallets.ui.weiget.BounceScrollView>


</LinearLayout>