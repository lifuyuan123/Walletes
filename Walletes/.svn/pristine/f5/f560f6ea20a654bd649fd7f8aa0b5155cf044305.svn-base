<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_space_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rc_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="206dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dip"
                android:background="@drawable/im_wallet_headbg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_loanAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="46dip"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="借款额度"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="26dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总额度:"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_totalAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="26dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待还款:"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_repayAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.wallet.bo.wallets.ui.weiget.WaveView
                android:id="@+id/waveline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="xiaomo" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dip">


            <Button
                android:id="@+id/bt_goloan"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_marginBottom="26dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="26dip"
                android:layout_weight="1"
                android:background="@drawable/im_bt_hloan"
                android:text="去借钱"
                android:textColor="@color/app_theme" />


            <Button
                android:id="@+id/bt_gorepayment"
                android:layout_width="0dip"
                android:layout_height="42dip"
                android:layout_marginBottom="26dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="26dip"
                android:layout_weight="1"
                android:background="@drawable/titlebg_selector"
                android:text="去还钱"
                android:textColor="@android:color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:text="借款记录" />

        <ImageView
            android:layout_margin="36dip"
            android:id="@+id/im_noLoanLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/im_empty_loanlog" />

    </LinearLayout>


</LinearLayout>