<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_space_bg"
    android:orientation="vertical">


    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/white"
        app:titleBarShowLine="true"
        app:titleBarLeftImage="@drawable/im_back_black"
        app:titleBarTitleColor="@color/text_gray"
        app:titleBarTitle="我的银行卡">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <com.wallet.bo.wallets.ui.weiget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_bank"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/bt_addBank"
                android:layout_marginTop="15dip"
                android:layout_width="match_parent"
                android:padding="15dip"
                android:text="+ 添加银行卡"
                android:background="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.wallet.bo.wallets.ui.weiget.BounceScrollView>
    </LinearLayout>





</LinearLayout>