<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/app_theme"
        app:titleBarLeftImage="@drawable/im_back"
        app:titleBarTitle="关于我们">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>

    <com.wallet.bo.wallets.ui.weiget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none">


        <LinearLayout
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dip"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/im_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_lancher" />

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:focusable="false"
                    android:text="小陌钱包V1.0.0"
                    android:textColor="@color/app_gray"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="关注微信"
                    android:focusable="false"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bt_weChant"
                    android:layout_width="match_parent"
                    android:layout_height="64dip"
                    android:drawablePadding="10dip"
                    android:focusable="false"
                    android:gravity="center_vertical|right"
                    android:text="xiaomoqianbao"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/item_horizontal_gray" />


            <TextView
                android:id="@+id/bt_update"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/im_spinner_right"
                android:gravity="center_vertical"
                android:focusable="false"
                android:text="检查更新"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />


            <TextView
                android:id="@+id/bt_hp"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:drawablePadding="10dip"
                android:focusable="false"
                android:drawableRight="@drawable/im_spinner_right"
                android:gravity="center_vertical"
                android:text="给小陌钱包好评"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />


            <TextView
                android:id="@+id/bt_xy"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:drawablePadding="10dip"
                android:focusable="false"
                android:drawableRight="@drawable/im_spinner_right"
                android:gravity="center_vertical"
                android:text="法律协议"
                android:textSize="16sp" />

            <include layout="@layout/item_horizontal_gray" />

        </LinearLayout>


    </com.wallet.bo.wallets.ui.weiget.BounceScrollView>


</LinearLayout>