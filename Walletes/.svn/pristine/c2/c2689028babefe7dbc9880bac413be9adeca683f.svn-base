<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/app_theme"
        app:titleBarLeftImage="@drawable/im_back"
        app:titleBarTitle="注册">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="26dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/im_name" />
            </LinearLayout>


            <com.wallet.bo.wallets.ui.weiget.CleanableEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="72dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:drawableLeft="@drawable/im_acount"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/im_et_clear"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="11"
                android:textSize="16sp"
                android:theme="@style/AppEditText" />

            <LinearLayout
                android:id="@+id/ll_messageLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip">

                    <EditText
                        android:id="@+id/et_imcp"
                        android:layout_width="match_parent"
                        android:layout_height="64dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:drawableLeft="@drawable/im_imcp"
                        android:drawablePadding="10dip"
                        android:gravity="center_vertical"
                        android:hint="图形验证码"
                        android:lines="1"
                        android:textSize="16sp"
                        android:theme="@style/AppEditText" />

                    <ImageView
                        android:id="@+id/im_verify"
                        android:layout_width="84dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip">


                    <EditText
                        android:id="@+id/et_cp"
                        android:layout_width="match_parent"
                        android:layout_height="72dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:drawableLeft="@drawable/im_cp"
                        android:drawablePadding="10dip"
                        android:gravity="center_vertical"
                        android:hint="验证码"
                        android:lines="1"
                        android:textSize="16sp"
                        android:theme="@style/AppEditText" />


                    <TextView
                        android:id="@+id/bt_cp"
                        android:layout_width="wrap_content"
                        android:minWidth="72dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="17dip"
                        android:background="@drawable/bg_ckred_loan"
                        android:gravity="center"
                        android:text="点击获取"
                        android:textColor="@color/app_theme"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>


            <EditText
                android:id="@+id/et_ps"
                android:layout_width="match_parent"
                android:layout_height="72dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:drawableLeft="@drawable/im_pw"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:hint="密码"
                android:lines="1"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:theme="@style/AppEditText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bt_help"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="12dip"
                    android:gravity="right"
                    android:text="收不到短信？联系客服"
                    android:textSize="14sp" />

            </RelativeLayout>
            


            <Button
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="46dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="46dip"
                android:layout_marginRight="46dip"
                android:layout_marginTop="36dip"
                android:background="@drawable/titlebg_selector"
                android:text="注册"
                android:gravity="center"
                android:textColor="@drawable/title_selector"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dip"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_isAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textSize="14sp"
                    android:checked="true"
                    android:theme="@style/AppEditText" />

                <TextView
                    android:id="@+id/bt_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dip"
                    android:text="《小陌钱包用户使用协议》"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>