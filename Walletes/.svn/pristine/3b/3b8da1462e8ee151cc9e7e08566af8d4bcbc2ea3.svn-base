<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:titleBarRightTitle="注册"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/app_theme"
        app:titleBarTitle="登陆">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="26dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/im_name" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_loginType"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_account"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/h_linebg_selector"
            android:drawablePadding="10dip"
            android:gravity="center"
            android:text="账号登陆"
            android:textColor="@drawable/buttom_color_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb_mes"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/h_linebg_selector"
            android:drawablePadding="10dip"
            android:gravity="center"
            android:text="短信登陆"
            android:textColor="@drawable/buttom_color_selector"
            android:textSize="16sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="72dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="32dip"
        android:textSize="16sp"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:drawableLeft="@drawable/im_acount"
        android:drawablePadding="10dip"
        android:gravity="center_vertical"
        android:hint="手机号" />

    <EditText
        android:id="@+id/et_ps"
        android:layout_width="match_parent"
        android:layout_height="72dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:drawableLeft="@drawable/im_pw"
        android:drawablePadding="10dip"
        android:textSize="16sp"
        android:lines="1"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:hint="请输入密码" />

    <LinearLayout
        android:id="@+id/ll_messageLogin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dip">

            <EditText
                android:id="@+id/et_imcp"
                android:layout_width="match_parent"
                android:layout_height="72dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:textSize="16sp"
                android:lines="1"
                android:drawableLeft="@drawable/im_imcp"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:hint="请输入图形验证码" />

            <ImageView
                android:id="@+id/im_verify"
                android:layout_marginRight="15dip"
                android:layout_width="84dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dip">


        <EditText
            android:id="@+id/et_cp"
            android:layout_width="match_parent"
            android:layout_height="72dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:drawableLeft="@drawable/im_cp"
            android:drawablePadding="10dip"
            android:textSize="16sp"
            android:lines="1"
            android:gravity="center_vertical"
            android:hint="请输入验证码" />


            <TextView
                android:id="@+id/bt_cp"
                android:layout_margin="17dip"
                android:layout_width="wrap_content"
                android:text="点击获取"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/bg_ckred_loan"
                android:textColor="@color/app_theme"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



    </LinearLayout>

            <TextView
                android:id="@+id/bt_help"
                android:layout_marginTop="12dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:gravity="right"
                android:textColor="@color/app_theme"
                android:textSize="14sp"
                android:text="忘记密码" />


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_margin="46dip"
        android:background="@drawable/titlebg_selector"
        android:text="登陆"
        android:textSize="18sp"
        android:textColor="@drawable/title_selector" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>