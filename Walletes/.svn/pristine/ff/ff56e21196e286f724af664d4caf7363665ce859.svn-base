<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.wallet.bo.wallets.ui.weiget.EaseTitleBar
        android:id="@+id/ease_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:titleBarBackground="@color/app_theme"
        app:titleBarLeftImage="@drawable/im_back"
        app:titleBarTitle="拍照认证">

    </com.wallet.bo.wallets.ui.weiget.EaseTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ease_titlebar"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="本人身份证，内容清晰可辨"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dip"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_loan_photo">

                        <TextView
                            android:id="@+id/tv_zm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dip"
                            android:text="身份证正面"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_zm"
                            android:background="@drawable/bg_loan_photo"
                            android:padding="2dip">

                            <ImageView
                                android:id="@+id/im_photo_one"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/loan_photo_one" />
                        </FrameLayout>


                        <ImageView
                            android:id="@+id/bt_photo_one"
                            android:layout_width="46dip"
                            android:layout_height="46dip"
                            android:layout_centerInParent="true"
                            android:src="@drawable/loan_photo" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_weight="1"
                        android:background="@drawable/bg_loan_photo">

                        <TextView
                            android:id="@+id/tv_fm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dip"
                            android:text="身份证反面"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/tv_fm"
                            android:background="@drawable/bg_loan_photo"
                            android:padding="2dip">


                            <ImageView
                                android:id="@+id/im_photo_two"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/loan_photo_two" />

                        </FrameLayout>

                        <ImageView
                            android:id="@+id/bt_photo_two"
                            android:layout_width="46dip"
                            android:layout_height="46dip"
                            android:layout_centerInParent="true"
                            android:src="@drawable/loan_photo" />

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="146dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/bg_loan_photo">

                    <TextView
                        android:id="@+id/tv_scz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dip"
                        android:text="手持照"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />


                    <FrameLayout
                        android:layout_width="146dip"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_scz"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_loan_photo"
                        android:padding="2dip">

                        <ImageView
                            android:id="@+id/im_photo_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/loan_photo_treen" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/bt_photo_three"
                        android:layout_width="46dip"
                        android:layout_height="46dip"
                        android:layout_centerInParent="true"
                        android:src="@drawable/loan_photo" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:text="请上传清晰可见的身份证照片以获得更高的信用额度"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:text="拍照钱请先在设置-隐私中开启拍照权限"
                android:textSize="14sp" />


            <Button
                android:id="@+id/bt_goto"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_marginBottom="26dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="26dip"
                android:background="@drawable/titlebg_selector"
                android:text="下一步"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <com.wallet.bo.wallets.ui.weiget.cpb.CircularProgressButton
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_marginBottom="26dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="26dip"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:cpb_cornerRadius="15dp"
                app:cpb_iconComplete="@drawable/ic_action_accept"
                app:cpb_iconError="@drawable/ic_action_cancel"
                app:cpb_textIdle="上传" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>