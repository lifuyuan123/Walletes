<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/im_noNet"
        android:layout_width="64dip"
        android:layout_centerInParent="true"
        android:src="@drawable/im_nonet"
        android:layout_height="64dip" />

    <TextView
        android:layout_below="@id/im_noNet"
        android:id="@+id/tv_nonet_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:text="@string/nonet_description"
        android:textColor="@color/uiPrimaryColor"
        android:textSize="@dimen/smartloadinglayout_text_size" />

    <Button
        android:id="@+id/btn_nonet"
        android:layout_width="@dimen/smartloadinglayout_error_btn_width"
        android:layout_height="@dimen/smartloadinglayout_error_btn_height"
        android:layout_below="@id/tv_nonet_message"
        android:layout_centerHorizontal="true"
        android:text="@string/nonet_btn_title"
        android:textColor="#ffffff"
        android:textSize="@dimen/smartloadinglayout_text_size"
        android:layout_marginTop="@dimen/smartloadinglayout_error_btn_margin"
        android:background="@drawable/smartloadinglayout_bg_error_btn"/>
</RelativeLayout>