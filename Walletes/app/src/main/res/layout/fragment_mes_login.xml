<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dip">


    <com.wallet.bo.wallets.ui.weiget.CleanableEditText
        android:id="@+id/et_name"
        style="@style/text_Style"
        android:layout_marginTop="20dip"
        android:drawableLeft="@drawable/im_acount"
        android:drawableRight="@drawable/im_et_clear"
        android:hint="手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:theme="@style/AppEditText" />


    <LinearLayout
        android:id="@+id/ll_messageLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dip">

            <EditText
                android:id="@+id/et_imcp"
                style="@style/text_Style"
                android:drawableLeft="@drawable/im_imcp"
                android:hint="请输入图形验证码"
                android:theme="@style/AppEditText" />

            <ImageView
                android:id="@+id/im_verify"
                android:layout_width="84dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dip">


            <EditText
                android:id="@+id/et_cp"
                style="@style/text_Style"
                android:drawableLeft="@drawable/im_cp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:theme="@style/AppEditText" />


            <TextView
                android:id="@+id/bt_cp"
                style="@style/bt_cpStyle"
                android:layout_alignParentRight="true"
                android:layout_margin="17dip"
                android:text="点击获取" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip">

        <TextView
            android:id="@+id/bt_help"
            style="@style/text_alertStyle"
            android:layout_alignParentRight="true"
            android:text="收不到短信？请联系客服" />

    </RelativeLayout>


</LinearLayout>