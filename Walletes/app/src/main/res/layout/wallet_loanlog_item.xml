<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="2dip"
        app:cardCornerRadius="8dip"
        app:cardElevation="8dip"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip">

            <ImageView
                android:id="@+id/im_status"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款编号："
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XMQ0000000000004"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_loanTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/bg_ckred_loan"
                        android:paddingLeft="8dip"
                        android:paddingRight="8dip"
                        android:text="14天"
                        android:textColor="@color/app_theme"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款金额："
                        android:textColor="@color/button_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_loanMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:textColor="@color/button_normal"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请时间："
                        android:textColor="@color/button_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_fanTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017年09月11日 16 ：54"
                        android:textColor="@color/button_normal"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款金额："
                        android:textColor="@color/button_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_repayMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:textColor="@color/button_normal"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dip">

                    <TextView
                        android:id="@+id/tv_timeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款时间："
                        android:textColor="@color/button_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_repayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017年09月11日 16 ：54"
                        android:textColor="@color/button_normal"
                        android:textSize="14sp" />

                </LinearLayout>


                <include layout="@layout/item_horizontal_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_btStatus"
                        android:layout_width="96dip"
                        android:layout_height="32dip"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="2dip"
                        app:cardBackgroundColor="@color/app_theme"
                        app:cardCornerRadius="8dip"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/bt_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="已结清"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>